<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request Approved - <%= appTitle || 'PRC Generator' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .success-container {
            max-width: 550px;
            text-align: center;
        }
        .success-card {
            background: white;
            border-radius: 20px;
            padding: 3rem 2rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }
        .check-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: #28a745;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            animation: scaleIn 0.5s ease-out;
        }
        .check-icon i {
            font-size: 3rem;
            color: white;
        }
        @keyframes scaleIn {
            0% {
                transform: scale(0);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }
        .spinner-container {
            margin: 2rem 0;
        }
        .spinner-border {
            width: 3rem;
            height: 3rem;
            border-width: 0.3rem;
            border-color: #f5576c;
            border-right-color: transparent;
        }
        .countdown {
            font-size: 1.2rem;
            font-weight: 600;
            color: #f5576c;
            margin-top: 1rem;
        }
        .redirect-text {
            color: #6c757d;
            font-size: 0.9rem;
            margin-top: 1rem;
        }
        .admin-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: #ffe5e5;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 1rem;
        }
        .institution-details {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin: 1rem 0;
        }
        .institution-details dl {
            margin: 0;
        }
        .institution-details dt {
            font-size: 0.85rem;
            color: #6c757d;
            margin-bottom: 0.25rem;
        }
        .institution-details dd {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }
        .institution-details dd:last-child {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-card">
            <!-- Success Check Icon -->
            <div class="check-icon">
                <i class="bi bi-check-lg"></i>
            </div>

            <!-- Admin Badge -->
            <div class="admin-badge">
                <i class="bi bi-shield-check me-1"></i>
                System Administrator
            </div>

            <!-- Success Message -->
            <h2 class="mb-3">Institution Approved!</h2>

            <% if (institutionName) { %>
                <p class="text-muted mb-3">
                    <strong><%= institutionName %></strong> has been created successfully.
                </p>

                <% if (institutionId) { %>
                    <div class="institution-details">
                        <dl class="row mb-0">
                            <dt class="col-5 text-start">Institution Name:</dt>
                            <dd class="col-7 text-start"><%= institutionName %></dd>

                            <dt class="col-5 text-start">Institution ID:</dt>
                            <dd class="col-7 text-start"><code class="bg-light px-2 py-1 rounded"><%= institutionId %></code></dd>
                        </dl>
                    </div>
                <% } %>
            <% } else { %>
                <p class="text-muted mb-4">
                    The institution request has been approved successfully.
                </p>
            <% } %>

            <div class="alert alert-success py-2 small mt-3">
                <i class="bi bi-info-circle me-1"></i>
                The requester has been assigned as institution administrator.
            </div>

            <!-- Spinner -->
            <div class="spinner-container">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Countdown -->
            <div class="countdown">
                Redirecting in <span id="countdown">3</span> seconds...
            </div>

            <div class="redirect-text">
                You will be redirected to the admin dashboard automatically.
            </div>

            <!-- Manual Redirect Button -->
            <div class="mt-4">
                <a href="/admin/dashboard" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i>Go to Dashboard Now
                </a>
            </div>
        </div>
    </div>

    <script>
        // Countdown timer (3 seconds for admin)
        let seconds = 3;
        const countdownElement = document.getElementById('countdown');

        const countdownInterval = setInterval(() => {
            seconds--;
            countdownElement.textContent = seconds;

            if (seconds <= 0) {
                clearInterval(countdownInterval);
                window.location.href = '/admin/dashboard';
            }
        }, 1000);

        // Preload dashboard in background for smoother transition
        setTimeout(() => {
            const link = document.createElement('link');
            link.rel = 'prefetch';
            link.href = '/admin/dashboard';
            document.head.appendChild(link);
        }, 1000);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
