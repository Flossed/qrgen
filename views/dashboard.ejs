<% if (user.role === 'issuer' && typeof pendingInstitutionRequest !== 'undefined' && pendingInstitutionRequest) { %>
<script>
// Auto-refresh functionality for pending institution requests
(function() {
    const REFRESH_INTERVAL = 30; // seconds
    let secondsRemaining = REFRESH_INTERVAL;
    let refreshTimer = null;
    let countdownTimer = null;

    const progressBar = document.getElementById('refreshProgressBar');
    const countdownElement = document.getElementById('countdown');
    const manualRefreshBtn = document.getElementById('manualRefreshBtn');

    // Function to refresh the dashboard
    window.refreshDashboard = function() {
        // Show loading state on button
        const originalBtnContent = manualRefreshBtn.innerHTML;
        manualRefreshBtn.disabled = true;
        manualRefreshBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Refreshing...';

        // Reload the page
        location.reload();
    };

    // Function to update the countdown and progress bar
    function updateCountdown() {
        secondsRemaining--;

        // Update countdown text
        countdownElement.textContent = secondsRemaining;

        // Update progress bar (animate from 100% to 0%)
        const percentageRemaining = (secondsRemaining / REFRESH_INTERVAL) * 100;
        progressBar.style.width = percentageRemaining + '%';
        progressBar.setAttribute('aria-valuenow', percentageRemaining);

        // Change color as it gets closer to refresh
        if (secondsRemaining <= 5) {
            progressBar.classList.remove('bg-info');
            progressBar.classList.add('bg-warning');
        } else if (secondsRemaining <= 10) {
            progressBar.classList.remove('bg-info', 'bg-success');
            progressBar.classList.add('bg-info');
        }

        // When countdown reaches 0, refresh the page
        if (secondsRemaining <= 0) {
            clearInterval(countdownTimer);
            refreshDashboard();
        }
    }

    // Function to start the countdown
    function startCountdown() {
        // Reset
        secondsRemaining = REFRESH_INTERVAL;
        countdownElement.textContent = secondsRemaining;
        progressBar.style.width = '100%';
        progressBar.setAttribute('aria-valuenow', 100);
        progressBar.classList.remove('bg-warning', 'bg-success');
        progressBar.classList.add('bg-info');

        // Clear any existing timers
        if (countdownTimer) {
            clearInterval(countdownTimer);
        }

        // Start countdown (update every second)
        countdownTimer = setInterval(updateCountdown, 1000);
    }

    // Initialize the countdown when page loads
    startCountdown();

    // Add visual feedback when hovering over the progress bar
    const progressContainer = progressBar.parentElement;
    progressContainer.addEventListener('mouseenter', function() {
        this.style.opacity = '0.8';
    });
    progressContainer.addEventListener('mouseleave', function() {
        this.style.opacity = '1';
    });

    // Clean up timers when page is about to unload
    window.addEventListener('beforeunload', function() {
        if (countdownTimer) {
            clearInterval(countdownTimer);
        }
        if (refreshTimer) {
            clearTimeout(refreshTimer);
        }
    });

    // Add console log for debugging
    console.log('Auto-refresh initialized: Will refresh every', REFRESH_INTERVAL, 'seconds while institution request is pending');

    // Show a small toast notification when auto-refresh is active
    const toastHtml = `
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
            <div id="autoRefreshToast" class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi bi-info-circle me-2"></i>
                        Auto-refresh is active. Dashboard will update automatically.
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    `;

    // Add toast to DOM and show it briefly
    document.body.insertAdjacentHTML('beforeend', toastHtml);
    const toastElement = document.getElementById('autoRefreshToast');
    const toast = new bootstrap.Toast(toastElement, { delay: 5000 });
    toast.show();

    // Remove toast from DOM after it's hidden
    toastElement.addEventListener('hidden.bs.toast', function() {
        toastElement.parentElement.remove();
    });
})();
</script>
<% } %>