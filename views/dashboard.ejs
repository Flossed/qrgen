<div class="row">
    <!-- Onboarding Section (for non-issuer users who haven't completed onboarding) -->
    <%- include('prc/partials/onboarding-section') %>

    <!-- Issuer Onboarding Section (for issuers who haven't completed onboarding) -->
    <%- include('prc/partials/issuer-onboarding-section') %>

    <!-- Auto-Refresh Timer (only shown when there are pending institution requests) -->
    <% if (user.role === 'issuer' && typeof pendingInstitutionRequest !== 'undefined' && pendingInstitutionRequest) { %>
    <div class="col-12 mb-4">
        <div class="card border-info">
            <div class="card-body p-3">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div>
                        <i class="bi bi-arrow-clockwise me-2 text-info"></i>
                        <strong class="text-info">Auto-Refresh Active</strong>
                        <span class="ms-2 text-muted small">Checking for approval updates every <span id="refreshInterval">30</span> seconds</span>
                    </div>
                    <button id="manualRefreshBtn" class="btn btn-sm btn-outline-info" onclick="refreshDashboard()">
                        <i class="bi bi-arrow-clockwise me-1"></i>Refresh Now
                    </button>
                </div>
                <div class="progress" style="height: 6px; cursor: pointer;" onclick="refreshDashboard()" title="Click to refresh now">
                    <div id="refreshProgressBar"
                         class="progress-bar progress-bar-striped progress-bar-animated bg-info"
                         role="progressbar"
                         style="width: 100%;"
                         aria-valuenow="100"
                         aria-valuemin="0"
                         aria-valuemax="100">
                    </div>
                </div>
                <small class="text-muted d-block mt-2">
                    <i class="bi bi-info-circle me-1"></i>
                    Next refresh in <strong id="countdown">30</strong> seconds. Click the bar or button to refresh immediately.
                </small>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Welcome Section -->
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-house-door me-2"></i>
                Welcome, <%= user.fullName %>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="card-title mb-2">
                            <% if (user.role === 'admin') { %>
                                System Administrator Dashboard
                            <% } else if (user.role === 'issuer') { %>
                                PRC Issuer Dashboard
                            <% } else { %>
                                User Dashboard
                            <% } %>
                        </h5>
                        <p class="card-text text-muted mb-3">
                            <% if (user.role === 'admin') { %>
                                Manage the PRC generation system, users, and certificates.
                            <% } else if (user.role === 'issuer') { %>
                                Review and approve PRC requests from citizens. PRCs are automatically generated upon approval.
                            <% } else { %>
                                View and manage your PRC documents and profile information.
                            <% } %>
                        </p>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center"
                             style="width: 80px; height: 80px;">
                            <i class="bi bi-<%= user.role === 'admin' ? 'gear' : user.role === 'issuer' ? 'building' : 'person' %> text-primary"
                               style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>

                <% if (user.role === 'issuer' && issuerMetrics) { %>
                <!-- Issuer Metrics -->
                <hr class="my-3">
                <div class="row g-3 text-center">
                    <div class="col-md-3 col-6">
                        <div class="p-3 bg-warning bg-opacity-10 rounded">
                            <div class="display-6 text-warning mb-2">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <h3 class="mb-0"><%= issuerMetrics.totalPendingRequests %></h3>
                            <small class="text-muted">Pending Requests</small>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="p-3 bg-info bg-opacity-10 rounded">
                            <div class="display-6 text-info mb-2">
                                <i class="bi bi-people"></i>
                            </div>
                            <h3 class="mb-0"><%= issuerMetrics.registeredUsers %></h3>
                            <small class="text-muted">Registered Users</small>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="p-3 bg-success bg-opacity-10 rounded">
                            <div class="display-6 text-success mb-2">
                                <i class="bi bi-credit-card-2-front"></i>
                            </div>
                            <h3 class="mb-0"><%= issuerMetrics.issuedEHICs %></h3>
                            <small class="text-muted">Issued EHICs</small>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="p-3 bg-primary bg-opacity-10 rounded">
                            <div class="display-6 text-primary mb-2">
                                <i class="bi bi-qr-code"></i>
                            </div>
                            <h3 class="mb-0"><%= issuerMetrics.issuedPRCs %></h3>
                            <small class="text-muted">Issued PRCs</small>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-12">
        <h5 class="mb-3">
            <i class="bi bi-lightning me-2"></i>Quick Actions
        </h5>
    </div>

    <% if (user.role === 'issuer' || user.role === 'admin') { %>
        <!-- Manage Certificates -->
        <div class="col-md-4 mb-3">
            <%
                // Check if issuer has completed onboarding
                const issuerOnboardingComplete = user.role !== 'issuer' || (user.institutionSetupCompleted && user.profileCompleted && user.certificateCreated);
            %>
            <div class="card h-100 certificate-card <%= !issuerOnboardingComplete ? 'opacity-50' : '' %>">
                <div class="card-body text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-key text-success" style="font-size: 1.5rem;"></i>
                    </div>
                    <h6 class="card-title">Certificates</h6>
                    <p class="card-text text-muted small mb-3">
                        Manage RSA certificates for JWT signing and verification
                    </p>
                    <% if (issuerOnboardingComplete) { %>
                        <a href="/certificates" class="btn btn-success btn-sm">
                            <i class="bi bi-key me-1"></i>Manage Keys
                        </a>
                    <% } else { %>
                        <button class="btn btn-secondary btn-sm" disabled>
                            <i class="bi bi-lock me-1"></i>Complete Onboarding First
                        </button>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>

    <!-- View History -->
    <div class="col-md-4 mb-3">
        <%
            // Check if issuer has completed onboarding (only applies to issuers)
            const historyAccessAllowed = user.role !== 'issuer' || (user.institutionSetupCompleted && user.profileCompleted && user.certificateCreated);
        %>
        <div class="card h-100 certificate-card <%= !historyAccessAllowed ? 'opacity-50' : '' %>">
            <div class="card-body text-center">
                <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 60px; height: 60px;">
                    <i class="bi bi-clock-history text-info" style="font-size: 1.5rem;"></i>
                </div>
                <h6 class="card-title">
                    <% if (user.role === 'issuer' || user.role === 'admin') { %>
                        PRC History
                    <% } else { %>
                        My Documents
                    <% } %>
                </h6>
                <p class="card-text text-muted small mb-3">
                    <% if (user.role === 'issuer' || user.role === 'admin') { %>
                        View previously generated PRC documents
                    <% } else { %>
                        View your PRC documents and history
                    <% } %>
                </p>
                <% if (historyAccessAllowed) { %>
                    <a href="/prc/history" class="btn btn-info btn-sm">
                        <i class="bi bi-list me-1"></i>View History
                    </a>
                <% } else { %>
                    <button class="btn btn-secondary btn-sm" disabled>
                        <i class="bi bi-lock me-1"></i>Complete Onboarding First
                    </button>
                <% } %>
            </div>
        </div>
    </div>

    <% if (user.role === 'admin') { %>
        <!-- Admin Actions -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 certificate-card">
                <div class="card-body text-center">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-people text-warning" style="font-size: 1.5rem;"></i>
                    </div>
                    <h6 class="card-title">User Management</h6>
                    <p class="card-text text-muted small mb-3">
                        Manage user accounts and permissions
                    </p>
                    <a href="/admin/users" class="btn btn-warning btn-sm">
                        <i class="bi bi-people me-1"></i>Manage Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100 certificate-card">
                <div class="card-body text-center">
                    <div class="bg-secondary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-bar-chart text-secondary" style="font-size: 1.5rem;"></i>
                    </div>
                    <h6 class="card-title">System Reports</h6>
                    <p class="card-text text-muted small mb-3">
                        View system statistics and reports
                    </p>
                    <a href="/admin/reports" class="btn btn-secondary btn-sm">
                        <i class="bi bi-graph-up me-1"></i>View Reports
                    </a>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Pending Requests (Issuer Only) -->
    <% if (user.role === 'issuer' && typeof pendingEHICRequests !== 'undefined') { %>
        <div class="col-12 mt-4">
            <div class="card">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Pending Requests
                    </h5>
                    <% if (pendingEHICRequests.length > 0) { %>
                        <span class="badge bg-danger"><%= pendingEHICRequests.length %></span>
                    <% } %>
                </div>
                <div class="card-body">
                    <% if (issuerInstitution) { %>
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Institution:</strong> <%= issuerInstitution.name %> (<%= issuerInstitution.institutionId %>)
                        </div>
                    <% } %>

                    <% if (pendingEHICRequests.length === 0) { %>
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            No pending EHIC requests at this time.
                        </div>
                    <% } else { %>
                        <p class="text-muted mb-3">
                            Review and approve or reject EHIC (European Health Insurance Card) requests from citizens.
                        </p>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Citizen</th>
                                        <th>Personal ID</th>
                                        <th>Date of Birth</th>
                                        <th>Card Expiry</th>
                                        <th>Requested</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pendingEHICRequests.slice(0, 5).forEach(request => { %>
                                        <tr>
                                            <td>
                                                <strong><%= request.citizenId.firstName %> <%= request.citizenId.lastName %></strong><br>
                                                <small class="text-muted"><%= request.citizenId.email %></small>
                                            </td>
                                            <td><%= request.personalIdNumber %></td>
                                            <td><%= request.dateOfBirth %></td>
                                            <td><%= new Date(request.expiryDate).toLocaleDateString() %></td>
                                            <td><%= new Date(request.createdAt).toLocaleDateString() %></td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-success"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#approveModal-<%= request._id %>">
                                                        <i class="bi bi-check-circle me-1"></i>Approve
                                                    </button>
                                                    <button type="button" class="btn btn-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#rejectModal-<%= request._id %>">
                                                        <i class="bi bi-x-circle me-1"></i>Reject
                                                    </button>
                                                </div>

                                                <!-- Approve Modal -->
                                                <div class="modal fade" id="approveModal-<%= request._id %>" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header bg-success text-white">
                                                                <h5 class="modal-title">Approve EHIC Request</h5>
                                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Approve EHIC request for <strong><%= request.citizenId.firstName %> <%= request.citizenId.lastName %></strong>?</p>
                                                                <div class="mb-3">
                                                                    <label for="approveNotes-<%= request._id %>" class="form-label">Notes (Optional)</label>
                                                                    <textarea class="form-control" id="approveNotes-<%= request._id %>"
                                                                              rows="2" maxlength="500"
                                                                              placeholder="Add any notes for the citizen..."></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="button" class="btn btn-success" onclick="approveEHIC('<%= request._id %>')">
                                                                    <i class="bi bi-check-circle me-1"></i>Approve EHIC
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Reject Modal -->
                                                <div class="modal fade" id="rejectModal-<%= request._id %>" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header bg-danger text-white">
                                                                <h5 class="modal-title">Reject EHIC Request</h5>
                                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Reject EHIC request for <strong><%= request.citizenId.firstName %> <%= request.citizenId.lastName %></strong>?</p>
                                                                <div class="mb-3">
                                                                    <label for="rejectNotes-<%= request._id %>" class="form-label">
                                                                        Reason for Rejection <span class="text-danger">*</span>
                                                                    </label>
                                                                    <textarea class="form-control" id="rejectNotes-<%= request._id %>"
                                                                              rows="3" required minlength="10" maxlength="500"
                                                                              placeholder="Please provide a clear reason for rejection..."></textarea>
                                                                    <small class="form-text text-muted">
                                                                        Between 10 and 500 characters. The citizen will see this reason.
                                                                    </small>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="button" class="btn btn-danger" onclick="rejectEHIC('<%= request._id %>')">
                                                                    <i class="bi bi-x-circle me-1"></i>Reject
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <% if (pendingEHICRequests.length > 5) { %>
                            <div class="text-center mt-3">
                                <a href="/ehic/pending" class="btn btn-outline-warning">
                                    <i class="bi bi-list me-1"></i>View All <%= pendingEHICRequests.length %> Pending Requests
                                </a>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Pending PRC Requests (Issuer Only) -->
    <% if (user.role === 'issuer' && typeof pendingPRCRequests !== 'undefined' && pendingPRCRequests.length > 0) { %>
        <div class="col-12 mt-4">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-text me-2"></i>Pending PRC Requests
                    </h5>
                    <span class="badge bg-light text-dark"><%= pendingPRCRequests.length %> pending</span>
                </div>
                <div class="card-body">
                    <% if (pendingPRCRequests.length === 0) { %>
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            No pending PRC requests at this time.
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Citizen</th>
                                        <th>Destination</th>
                                        <th>Travel Dates</th>
                                        <th>PRC Validity</th>
                                        <th>Requested</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pendingPRCRequests.slice(0, 5).forEach(request => { %>
                                        <tr>
                                            <td>
                                                <strong><%= request.citizenId.firstName %> <%= request.citizenId.lastName %></strong><br>
                                                <small class="text-muted"><%= request.citizenId.email %></small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary"><%= request.destinationCountry %></span>
                                            </td>
                                            <td>
                                                <small>
                                                    <%= new Date(request.travelStartDate).toLocaleDateString() %><br>
                                                    to <%= new Date(request.travelEndDate).toLocaleDateString() %>
                                                </small>
                                            </td>
                                            <td>
                                                <small>
                                                    <%= request.prcData.sd %><br>
                                                    to <%= request.prcData.ed %>
                                                </small>
                                            </td>
                                            <td>
                                                <small><%= new Date(request.createdAt).toLocaleDateString() %></small>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-success btn-sm me-1"
                                                        onclick="approvePRCRequest('<%= request._id %>')">
                                                    <i class="bi bi-check-circle"></i> Approve
                                                </button>
                                                <button type="button" class="btn btn-danger btn-sm"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#rejectPRCModal<%= request._id %>">
                                                    <i class="bi bi-x-circle"></i> Reject
                                                </button>

                                                <!-- Reject PRC Modal -->
                                                <div class="modal fade" id="rejectPRCModal<%= request._id %>" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header bg-danger text-white">
                                                                <h5 class="modal-title">Reject PRC Request</h5>
                                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>You are about to reject the PRC request from <strong><%= request.citizenId.firstName %> <%= request.citizenId.lastName %></strong>.</p>
                                                                <div class="mb-3">
                                                                    <label for="prcRejectNotes<%= request._id %>" class="form-label">
                                                                        <strong>Reason for Rejection *</strong>
                                                                    </label>
                                                                    <textarea class="form-control" id="prcRejectNotes<%= request._id %>"
                                                                              rows="3" required minlength="10" maxlength="500"
                                                                              placeholder="Please provide a clear reason for rejection..."></textarea>
                                                                    <small class="form-text text-muted">
                                                                        Between 10 and 500 characters. The citizen will see this reason.
                                                                    </small>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="button" class="btn btn-danger" onclick="rejectPRCRequest('<%= request._id %>')">
                                                                    <i class="bi bi-x-circle me-1"></i>Reject
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>

    <!-- My EHIC (Citizen Only) -->
    <% if ((user.role === 'citizen' || user.role === 'user') && typeof citizenEHICs !== 'undefined') { %>
        <div class="col-12 mt-4">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-credit-card-2-front me-2"></i>My EHIC (European Health Insurance Card)
                    </h5>
                    <% if (activeEHIC) { %>
                        <span class="badge bg-success">Active</span>
                    <% } else if (citizenEHICs.length > 0 && citizenEHICs[0].status === 'pending') { %>
                        <span class="badge bg-warning">Pending</span>
                    <% } %>
                </div>
                <div class="card-body">
                    <% if (activeEHIC) { %>
                        <!-- Active EHIC Display -->
                        <div class="alert alert-success mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <strong>Your EHIC is Active</strong><br>
                            You can now request Provisional Replacement Certificates (PRCs) when traveling.
                        </div>

                        <div class="card border-success mb-3">
                            <div class="card-header bg-success bg-opacity-10">
                                <h6 class="mb-0">
                                    <i class="bi bi-credit-card-2-front me-2"></i>Active EHIC Card
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-6">Cardholder Name:</dt>
                                            <dd class="col-sm-6"><%= activeEHIC.holderFullName %></dd>
                                            <dt class="col-sm-6">Date of Birth:</dt>
                                            <dd class="col-sm-6"><%= activeEHIC.dateOfBirth %></dd>
                                            <dt class="col-sm-6">Personal ID:</dt>
                                            <dd class="col-sm-6"><%= activeEHIC.personalIdNumber %></dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-6">Institution:</dt>
                                            <dd class="col-sm-6"><%= activeEHIC.institution.name %></dd>
                                            <dt class="col-sm-6">Country:</dt>
                                            <dd class="col-sm-6"><span class="badge bg-primary"><%= activeEHIC.cardIssuerCountry %></span></dd>
                                            <dt class="col-sm-6">Card Expiry:</dt>
                                            <dd class="col-sm-6"><%= new Date(activeEHIC.expiryDate).toLocaleDateString() %></dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="text-center mt-3">
                                    <% if (activeEHIC.pdfPath) { %>
                                        <a href="/ehic/download/<%= activeEHIC._id %>" class="btn btn-success btn-sm" target="_blank">
                                            <i class="bi bi-download me-2"></i>Download EHIC Document
                                        </a>
                                    <% } %>
                                    <a href="/prc/create" class="btn btn-primary btn-sm">
                                        <i class="bi bi-file-earmark-plus me-2"></i>Request a PRC
                                    </a>
                                    <a href="/ehic/my-ehic" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-2"></i>View Full Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% } else if (citizenEHICs.length > 0 && citizenEHICs[0].status === 'pending') { %>
                        <!-- Pending EHIC -->
                        <div class="alert alert-warning">
                            <i class="bi bi-clock-history me-2"></i>
                            <strong>EHIC Request Pending</strong><br>
                            Your EHIC request is awaiting approval from your healthcare institution.
                        </div>

                        <div class="card border-warning">
                            <div class="card-body">
                                <h6><i class="bi bi-info-circle me-2"></i>Request Details</h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-4">Institution:</dt>
