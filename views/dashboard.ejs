<div class="row">
    <!-- Onboarding Section (for non-issuer users who haven't completed onboarding) -->
    <%- include('prc/partials/onboarding-section') %>

    <!-- Welcome Section -->
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-house-door me-2"></i>
                Welcome, <%= user.fullName %>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="card-title mb-2">
                            <% if (user.role === 'admin') { %>
                                System Administrator Dashboard
                            <% } else if (user.role === 'issuer') { %>
                                PRC Issuer Dashboard
                            <% } else { %>
                                User Dashboard
                            <% } %>
                        </h5>
                        <p class="card-text text-muted mb-3">
                            <% if (user.role === 'admin') { %>
                                Manage the PRC generation system, users, and certificates.
                            <% } else if (user.role === 'issuer') { %>
                                Generate eEHIC compliant Provisional Replacement Certificates for <%= user.institutionName || 'your institution' %>.
                            <% } else { %>
                                View and manage your PRC documents and profile information.
                            <% } %>
                        </p>
                        <% if (user.role === 'issuer' || user.role === 'admin') { %>
                            <a href="/prc/generate" class="btn btn-primary">
                                <i class="bi bi-qr-code me-2"></i>Generate New PRC
                            </a>
                        <% } %>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center"
                             style="width: 80px; height: 80px;">
                            <i class="bi bi-<%= user.role === 'admin' ? 'gear' : user.role === 'issuer' ? 'building' : 'person' %> text-primary"
                               style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-12">
        <h5 class="mb-3">
            <i class="bi bi-lightning me-2"></i>Quick Actions
        </h5>
    </div>

    <% if (user.role === 'issuer' || user.role === 'admin') { %>
        <!-- Generate PRC Card -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 certificate-card">
                <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-qr-code text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                    <h6 class="card-title">Generate PRC</h6>
                    <p class="card-text text-muted small mb-3">
                        Create a new Provisional Replacement Certificate with secure QR code
                    </p>
                    <a href="/prc/generate" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle me-1"></i>Start Generation
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Certificates -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 certificate-card">
                <div class="card-body text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-key text-success" style="font-size: 1.5rem;"></i>
                    </div>
                    <h6 class="card-title">Certificates</h6>
                    <p class="card-text text-muted small mb-3">
                        Manage RSA certificates for JWT signing and verification
                    </p>
                    <a href="/certificates" class="btn btn-success btn-sm">
                        <i class="bi bi-key me-1"></i>Manage Keys
                    </a>
                </div>
            </div>
        </div>
    <% } %>

    <!-- View History -->
    <div class="col-md-4 mb-3">
        <div class="card h-100 certificate-card">
            <div class="card-body text-center">
                <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 60px; height: 60px;">
                    <i class="bi bi-clock-history text-info" style="font-size: 1.5rem;"></i>
                </div>
                <h6 class="card-title">
                    <% if (user.role === 'issuer' || user.role === 'admin') { %>
                        PRC History
                    <% } else { %>
                        My Documents
                    <% } %>
                </h6>
                <p class="card-text text-muted small mb-3">
                    <% if (user.role === 'issuer' || user.role === 'admin') { %>
                        View previously generated PRC documents
                    <% } else { %>
                        View your PRC documents and history
                    <% } %>
                </p>
                <a href="/prc/history" class="btn btn-info btn-sm">
                    <i class="bi bi-list me-1"></i>View History
                </a>
            </div>
        </div>
    </div>

    <% if (user.role === 'admin') { %>
        <!-- Admin Actions -->
        <div class="col-md-4 mb-3">
            <div class="card h-100 certificate-card">
                <div class="card-body text-center">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-people text-warning" style="font-size: 1.5rem;"></i>
                    </div>
                    <h6 class="card-title">User Management</h6>
                    <p class="card-text text-muted small mb-3">
                        Manage user accounts and permissions
                    </p>
                    <a href="/admin/users" class="btn btn-warning btn-sm">
                        <i class="bi bi-people me-1"></i>Manage Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card h-100 certificate-card">
                <div class="card-body text-center">
                    <div class="bg-secondary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="bi bi-bar-chart text-secondary" style="font-size: 1.5rem;"></i>
                    </div>
                    <h6 class="card-title">System Reports</h6>
                    <p class="card-text text-muted small mb-3">
                        View system statistics and reports
                    </p>
                    <a href="/admin/reports" class="btn btn-secondary btn-sm">
                        <i class="bi bi-graph-up me-1"></i>View Reports
                    </a>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Recent Activity -->
    <div class="col-12 mt-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-activity me-2"></i>
                Recent Activity
            </div>
            <div class="card-body">
                <% if (typeof recentActivity !== 'undefined' && recentActivity && recentActivity.length > 0) { %>
                    <div class="list-group list-group-flush">
                        <% recentActivity.forEach(activity => { %>
                            <div class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold">
                                        <i class="bi bi-<%= activity.icon || 'circle' %> me-2 text-<%= activity.type || 'primary' %>"></i>
                                        <%= activity.title %>
                                    </div>
                                    <small class="text-muted"><%= activity.description %></small>
                                </div>
                                <small class="text-muted"><%= activity.timestamp %></small>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                        <p class="mt-2 mb-0">No recent activity</p>
                        <small>
                            <% if (user.role === 'issuer' || user.role === 'admin') { %>
                                Start by generating your first PRC document
                            <% } else { %>
                                Your activity will appear here
                            <% } %>
                        </small>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- User Info (Mobile-friendly) -->
    <div class="col-12 mt-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-person-badge me-2"></i>
                Account Information
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8"><%= user.fullName %></dd>
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8"><%= user.email %></dd>
                            <dt class="col-sm-4">Role:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-<%= user.role === 'admin' ? 'danger' : user.role === 'issuer' ? 'success' : 'primary' %>">
                                    <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                                </span>
                            </dd>
                        </dl>
                    </div>
                    <% if (user.role === 'issuer' && user.institutionName) { %>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Institution:</dt>
                                <dd class="col-sm-7"><%= user.institutionName %></dd>
                                <% if (user.institutionId) { %>
                                    <dt class="col-sm-5">Institution ID:</dt>
                                    <dd class="col-sm-7"><%= user.institutionId %></dd>
                                <% } %>
                                <% if (user.countryCode) { %>
                                    <dt class="col-sm-5">Country:</dt>
                                    <dd class="col-sm-7"><%= user.countryCode %></dd>
                                <% } %>
                            </dl>
                        </div>
                    <% } %>
                </div>
                <div class="mt-3">
                    <a href="/auth/profile" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @media (max-width: 768px) {
        .certificate-card {
            margin-bottom: 1rem;
        }

        .card-body {
            padding: 1.5rem 1rem;
        }

        dl.row dt {
            margin-bottom: 0.25rem;
        }

        dl.row dd {
            margin-bottom: 0.5rem;
        }
    }
</style>