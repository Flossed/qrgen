<style>
    .admin-page-background {
        background-color: #ffe5e5;
        min-height: calc(100vh - 200px);
        padding: 2rem 0;
        margin: -2rem -15px 0 -15px;
        padding-left: 15px;
        padding-right: 15px;
    }
</style>

<div class="admin-page-background">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="background-color: #6c757d; color: white;">
                        <h5 class="mb-0">
                            <i class="bi bi-building me-2"></i>Manage Healthcare Institutions
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (institutions.length === 0) { %>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                No healthcare institutions have been registered yet.
                            </div>
                        <% } else { %>
                            <p class="text-muted mb-4">
                                Total Institutions: <strong><%= institutions.length %></strong>
                            </p>

                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Institution Name</th>
                                            <th>Institution ID</th>
                                            <th>Country</th>
                                            <th>Administrators</th>
                                            <th>Created Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% institutions.forEach(institution => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= institution.name %></strong>
                                                    <% if (institution.address) { %>
                                                        <br><small class="text-muted"><%= institution.address %></small>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <code><%= institution.institutionId %></code>
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary"><%= institution.country %></span>
                                                </td>
                                                <td>
                                                    <% if (institution.administrators && institution.administrators.length > 0) { %>
                                                        <% institution.administrators.forEach((admin, index) => { %>
                                                            <small>
                                                                <%= admin.firstName %> <%= admin.lastName %>
                                                                <% if (index < institution.administrators.length - 1) { %>, <% } %>
                                                            </small>
                                                        <% }); %>
                                                        <br>
                                                        <small class="text-muted">(<%= institution.administrators.length %> admin<%= institution.administrators.length > 1 ? 's' : '' %>)</small>
                                                    <% } else { %>
                                                        <small class="text-muted">No administrators</small>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <small><%= new Date(institution.createdAt).toLocaleDateString() %></small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">Active</span>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>

                        <div class="mt-4">
                            <a href="/admin/dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
