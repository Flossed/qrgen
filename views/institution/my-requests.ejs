<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-file-text me-2"></i>My Institution Requests
                </h5>
            </div>
            <div class="card-body">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (requests.length === 0) { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        You haven't submitted any institution requests yet.
                    </div>
                    <div class="text-center mt-4">
                        <a href="/institution-request/choose" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Create New Request
                        </a>
                    </div>
                <% } else { %>
                    <p class="text-muted mb-4">
                        Track the status of your institution join and creation requests.
                    </p>

                    <div class="accordion" id="requestsAccordion">
                        <!-- Pending Requests -->
                        <%
                        const pendingRequests = requests.filter(r => r.status === 'pending');
                        const approvedRequests = requests.filter(r => r.status === 'approved');
                        const rejectedRequests = requests.filter(r => r.status === 'rejected');
                        %>

                        <% if (pendingRequests.length > 0) { %>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#pending-section">
                                        <i class="bi bi-clock-history me-2"></i>
                                        <strong>Pending Requests</strong>
                                        <span class="badge bg-warning ms-2"><%= pendingRequests.length %></span>
                                    </button>
                                </h2>
                                <div id="pending-section" class="accordion-collapse collapse show"
                                     data-bs-parent="#requestsAccordion">
                                    <div class="accordion-body">
                                        <% pendingRequests.forEach(request => { %>
                                            <div class="card mb-3">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h6 class="mb-2">
                                                                <% if (request.requestType === 'join') { %>
                                                                    <i class="bi bi-building-add me-2 text-primary"></i>
                                                                    Join <%= request.institutionId.name %>
                                                                <% } else { %>
                                                                    <i class="bi bi-plus-circle me-2 text-success"></i>
                                                                    Create <%= request.institutionName %>
                                                                <% } %>
                                                            </h6>
                                                            <p class="mb-1 small text-muted">
                                                                <strong>Type:</strong>
                                                                <%= request.requestType === 'join' ? 'Join Existing Institution' : 'Create New Institution' %><br>
                                                                <% if (request.requestType === 'join') { %>
                                                                    <strong>Institution ID:</strong> <%= request.institutionId.institutionId %><br>
                                                                    <strong>Country:</strong> <%= request.institutionId.country %><br>
                                                                <% } else { %>
                                                                    <strong>Country:</strong> <%= request.institutionCountry %><br>
                                                                    <% if (request.institutionAddress) { %>
                                                                        <strong>Address:</strong> <%= request.institutionAddress %><br>
                                                                    <% } %>
                                                                <% } %>
                                                                <strong>Submitted:</strong> <%= new Date(request.createdAt).toLocaleString() %>
                                                            </p>
                                                            <div class="mt-2">
                                                                <strong>Justification:</strong>
                                                                <p class="mb-0 small text-secondary"><%= request.justification %></p>
                                                            </div>
                                                        </div>
                                                        <span class="badge bg-warning">Pending</span>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        <% } %>

                        <!-- Approved Requests -->
                        <% if (approvedRequests.length > 0) { %>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#approved-section">
                                        <i class="bi bi-check-circle me-2"></i>
                                        <strong>Approved Requests</strong>
                                        <span class="badge bg-success ms-2"><%= approvedRequests.length %></span>
                                    </button>
                                </h2>
                                <div id="approved-section" class="accordion-collapse collapse"
                                     data-bs-parent="#requestsAccordion">
                                    <div class="accordion-body">
                                        <% approvedRequests.forEach(request => { %>
                                            <div class="card mb-3 border-success">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h6 class="mb-2">
                                                                <% if (request.requestType === 'join') { %>
                                                                    <i class="bi bi-building-add me-2 text-primary"></i>
                                                                    Join <%= request.institutionId.name %>
                                                                <% } else { %>
                                                                    <i class="bi bi-plus-circle me-2 text-success"></i>
                                                                    Create <%= request.institutionName %>
                                                                <% } %>
                                                            </h6>
                                                            <p class="mb-1 small text-muted">
                                                                <% if (request.requestType === 'join') { %>
                                                                    <strong>Institution ID:</strong> <%= request.institutionId.institutionId %><br>
                                                                    <strong>Country:</strong> <%= request.institutionId.country %><br>
                                                                <% } else { %>
                                                                    <strong>Generated Institution ID:</strong>
                                                                    <span class="text-success fw-bold"><%= request.generatedInstitutionId %></span><br>
                                                                    <strong>Country:</strong> <%= request.institutionCountry %><br>
                                                                <% } %>
                                                                <strong>Submitted:</strong> <%= new Date(request.createdAt).toLocaleString() %><br>
                                                                <strong>Approved:</strong> <%= new Date(request.reviewedAt).toLocaleString() %>
                                                                <% if (request.reviewedBy) { %>
                                                                    by <%= request.reviewedBy.firstName %> <%= request.reviewedBy.lastName %>
                                                                <% } %>
                                                            </p>
                                                            <% if (request.reviewNotes) { %>
                                                                <div class="mt-2">
                                                                    <strong>Review Notes:</strong>
                                                                    <p class="mb-0 small text-secondary"><%= request.reviewNotes %></p>
                                                                </div>
                                                            <% } %>
                                                            <div class="mt-2">
                                                                <strong>Your Justification:</strong>
                                                                <p class="mb-0 small text-secondary"><%= request.justification %></p>
                                                            </div>
                                                        </div>
                                                        <span class="badge bg-success">Approved</span>
                                                    </div>
                                                    <% if (request.requestType === 'create' && request.createdInstitutionId) { %>
                                                        <div class="mt-3">
                                                            <a href="/institution/manage/<%= request.createdInstitutionId %>"
                                                               class="btn btn-sm btn-outline-primary">
                                                                <i class="bi bi-gear me-1"></i>Manage Institution
                                                            </a>
                                                        </div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        <% } %>

                        <!-- Rejected Requests -->
                        <% if (rejectedRequests.length > 0) { %>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#rejected-section">
                                        <i class="bi bi-x-circle me-2"></i>
                                        <strong>Rejected Requests</strong>
                                        <span class="badge bg-danger ms-2"><%= rejectedRequests.length %></span>
                                    </button>
                                </h2>
                                <div id="rejected-section" class="accordion-collapse collapse"
                                     data-bs-parent="#requestsAccordion">
                                    <div class="accordion-body">
                                        <% rejectedRequests.forEach(request => { %>
                                            <div class="card mb-3 border-danger">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h6 class="mb-2">
                                                                <% if (request.requestType === 'join') { %>
                                                                    <i class="bi bi-building-add me-2 text-primary"></i>
                                                                    Join <%= request.institutionId.name %>
                                                                <% } else { %>
                                                                    <i class="bi bi-plus-circle me-2 text-success"></i>
                                                                    Create <%= request.institutionName %>
                                                                <% } %>
                                                            </h6>
                                                            <p class="mb-1 small text-muted">
                                                                <% if (request.requestType === 'join') { %>
                                                                    <strong>Institution ID:</strong> <%= request.institutionId.institutionId %><br>
                                                                    <strong>Country:</strong> <%= request.institutionId.country %><br>
                                                                <% } else { %>
                                                                    <strong>Country:</strong> <%= request.institutionCountry %><br>
                                                                <% } %>
                                                                <strong>Submitted:</strong> <%= new Date(request.createdAt).toLocaleString() %><br>
                                                                <strong>Rejected:</strong> <%= new Date(request.reviewedAt).toLocaleString() %>
                                                                <% if (request.reviewedBy) { %>
                                                                    by <%= request.reviewedBy.firstName %> <%= request.reviewedBy.lastName %>
                                                                <% } %>
                                                            </p>
                                                            <div class="alert alert-danger mt-2 mb-0">
                                                                <strong>Reason for Rejection:</strong>
                                                                <p class="mb-0 small"><%= request.reviewNotes %></p>
                                                            </div>
                                                            <div class="mt-2">
                                                                <strong>Your Justification:</strong>
                                                                <p class="mb-0 small text-secondary"><%= request.justification %></p>
                                                            </div>
                                                        </div>
                                                        <span class="badge bg-danger">Rejected</span>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } %>

                <div class="mt-4">
                    <a href="/institution-request/choose" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
