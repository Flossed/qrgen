<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning bg-opacity-10">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>Pending Join Requests
                </h5>
            </div>
            <div class="card-body">
                <% if (requests.length === 0) { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        No pending join requests at this time.
                    </div>
                <% } else { %>
                    <p class="text-muted mb-4">
                        Review and approve/reject requests from users who want to join your institutions.
                    </p>

                    <div class="list-group">
                        <% requests.forEach(request => { %>
                            <div class="list-group-item">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h6 class="mb-2">
                                            <i class="bi bi-person-circle me-2"></i>
                                            <%= request.requestedBy.firstName %> <%= request.requestedBy.lastName %>
                                        </h6>
                                        <p class="mb-1 small text-muted">
                                            <strong>Email:</strong> <%= request.requestedBy.email %><br>
                                            <strong>Institution:</strong> <%= request.institutionId.name %> (<%= request.institutionId.country %>)<br>
                                            <strong>Requested:</strong> <%= new Date(request.createdAt).toLocaleString() %>
                                        </p>
                                        <div class="mt-2">
                                            <strong>Justification:</strong>
                                            <p class="mb-0 small"><%= request.justification %></p>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <button type="button" class="btn btn-sm btn-success mb-2"
                                                data-bs-toggle="modal"
                                                data-bs-target="#approveModal-<%= request._id %>">
                                            <i class="bi bi-check-circle me-1"></i>Approve
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#rejectModal-<%= request._id %>">
                                            <i class="bi bi-x-circle me-1"></i>Reject
                                        </button>
                                    </div>
                                </div>

                                <!-- Approve Modal -->
                                <div class="modal fade" id="approveModal-<%= request._id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-success text-white">
                                                <h5 class="modal-title">Approve Join Request</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form action="/institution-request/approve-join/<%= request._id %>" method="POST">
                                                <div class="modal-body">
                                                    <p>Approve <strong><%= request.requestedBy.email %></strong> to join <strong><%= request.institutionId.name %></strong>?</p>
                                                    <p class="text-muted small">
                                                        The user will be added as an administrator of the institution and can start generating PRCs.
                                                    </p>
                                                    <div class="mb-3">
                                                        <label for="approveNotes-<%= request._id %>" class="form-label">Notes (Optional)</label>
                                                        <textarea class="form-control" id="approveNotes-<%= request._id %>"
                                                                  name="notes" rows="2" maxlength="500"></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="bi bi-check-circle me-1"></i>Approve
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectModal-<%= request._id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Reject Join Request</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form action="/institution-request/reject-join/<%= request._id %>" method="POST">
                                                <div class="modal-body">
                                                    <p>Reject <strong><%= request.requestedBy.email %></strong>'s request to join <strong><%= request.institutionId.name %></strong>?</p>
                                                    <div class="mb-3">
                                                        <label for="rejectNotes-<%= request._id %>" class="form-label">
                                                            Reason for Rejection <span class="text-danger">*</span>
                                                        </label>
                                                        <textarea class="form-control" id="rejectNotes-<%= request._id %>"
                                                                  name="notes" rows="3" required minlength="10" maxlength="500"
                                                                  placeholder="Please provide a reason for rejection..."></textarea>
                                                        <small class="form-text text-muted">
                                                            Between 10 and 500 characters
                                                        </small>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-x-circle me-1"></i>Reject
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>

                <div class="mt-4">
                    <a href="/prc/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
