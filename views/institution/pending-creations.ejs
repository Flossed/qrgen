<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-danger bg-opacity-10">
                <h5 class="mb-0">
                    <i class="bi bi-shield-exclamation me-2"></i>Pending Institution Creation Requests
                </h5>
            </div>
            <div class="card-body">
                <% if (requests.length === 0) { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        No pending institution creation requests at this time.
                    </div>
                <% } else { %>
                    <p class="text-muted mb-4">
                        Review and approve/reject requests from issuers who want to create new healthcare institutions.
                        Upon approval, you must assign a unique Institution ID (4-10 digits).
                    </p>

                    <div class="list-group">
                        <% requests.forEach(request => { %>
                            <div class="list-group-item">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h6 class="mb-2">
                                            <i class="bi bi-building-add me-2"></i>
                                            <%= request.institutionName %>
                                        </h6>
                                        <p class="mb-1 small text-muted">
                                            <strong>Country:</strong> <%= request.institutionCountry %><br>
                                            <% if (request.institutionAddress) { %>
                                                <strong>Address:</strong> <%= request.institutionAddress %><br>
                                            <% } %>
                                            <% if (request.institutionContact) { %>
                                                <strong>Contact:</strong> <%= request.institutionContact %><br>
                                            <% } %>
                                            <strong>Requested:</strong> <%= new Date(request.createdAt).toLocaleString() %>
                                        </p>
                                        <div class="mt-2">
                                            <strong>Requested By:</strong>
                                            <p class="mb-1 small">
                                                <%= request.requestedBy.firstName %> <%= request.requestedBy.lastName %>
                                                (<%= request.requestedBy.email %>)
                                            </p>
                                        </div>
                                        <div class="mt-2">
                                            <strong>Justification:</strong>
                                            <p class="mb-0 small"><%= request.justification %></p>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <button type="button" class="btn btn-sm btn-success mb-2"
                                                data-bs-toggle="modal"
                                                data-bs-target="#approveModal-<%= request._id %>">
                                            <i class="bi bi-check-circle me-1"></i>Approve
                                        </button>
                                        <button type="button" class="btn btn-sm btn-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#rejectModal-<%= request._id %>">
                                            <i class="bi bi-x-circle me-1"></i>Reject
                                        </button>
                                    </div>
                                </div>

                                <!-- Approve Modal -->
                                <div class="modal fade" id="approveModal-<%= request._id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-success text-white">
                                                <h5 class="modal-title">Approve Institution Creation</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form action="/institution-request/approve-creation/<%= request._id %>" method="POST">
                                                <div class="modal-body">
                                                    <p>Approve the creation of <strong><%= request.institutionName %></strong> in <strong><%= request.institutionCountry %></strong>?</p>
                                                    <p class="text-muted small">
                                                        The requesting issuer (<%= request.requestedBy.email %>) will be assigned as the institution administrator.
                                                    </p>

                                                    <div class="alert alert-info">
                                                        <small>
                                                            <i class="bi bi-info-circle me-2"></i>
                                                            <strong>Note:</strong> The system will automatically generate a unique Institution ID (4-10 digits) for this institution.
                                                        </small>
                                                    </div>

                                                    <div class="mb-3">
                                                        <label for="approveNotes-<%= request._id %>" class="form-label">Notes (Optional)</label>
                                                        <textarea class="form-control" id="approveNotes-<%= request._id %>"
                                                                  name="notes" rows="2" maxlength="500"
                                                                  placeholder="Add any notes for the requester..."></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="bi bi-check-circle me-1"></i>Approve & Create
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectModal-<%= request._id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Reject Institution Creation</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form action="/institution-request/reject-creation/<%= request._id %>" method="POST">
                                                <div class="modal-body">
                                                    <p>Reject the creation request for <strong><%= request.institutionName %></strong>?</p>
                                                    <div class="mb-3">
                                                        <label for="rejectNotes-<%= request._id %>" class="form-label">
                                                            Reason for Rejection <span class="text-danger">*</span>
                                                        </label>
                                                        <textarea class="form-control" id="rejectNotes-<%= request._id %>"
                                                                  name="notes" rows="3" required minlength="10" maxlength="500"
                                                                  placeholder="Please provide a reason for rejection..."></textarea>
                                                        <small class="form-text text-muted">
                                                            Between 10 and 500 characters
                                                        </small>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-x-circle me-1"></i>Reject
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>

                <div class="mt-4">
                    <a href="/prc/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
