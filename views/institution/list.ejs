<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-hospital me-2"></i>Select Healthcare Institution
                </h5>
            </div>
            <div class="card-body">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i><%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="alert alert-info mb-4">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Country of Residence:</strong> <%= user.countryOfResidence %>
                    <br>
                    <small>Showing healthcare institutions in your country. A Personal ID will be generated upon registration.</small>
                </div>

                <% if (institutions.length === 0) { %>
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        No active healthcare institutions found in your country of residence.
                        Please contact an administrator.
                    </div>
                    <div class="d-grid">
                        <a href="/prc/dashboard" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>
                <% } else { %>
                    <div class="list-group mb-3">
                        <% institutions.forEach(institution => { %>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">
                                            <i class="bi bi-building me-2"></i><%= institution.name %>
                                        </h6>
                                        <p class="mb-1 text-muted">
                                            <small>
                                                <strong>Institution ID:</strong> <%= institution.institutionId %>
                                                <br>
                                                <strong>Country:</strong> <%= institution.country %>
                                            </small>
                                        </p>
                                    </div>
                                    <div>
                                        <form action="/institution/select" method="POST" class="d-inline">
                                            <input type="hidden" name="institutionId" value="<%= institution._id %>">
                                            <button type="submit" class="btn btn-primary"
                                                    onclick="return confirm('Register with <%= institution.name %>? A Personal ID will be generated for you.')">
                                                <i class="bi bi-check-circle me-1"></i>Select
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <div class="d-grid">
                        <a href="/prc/dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
