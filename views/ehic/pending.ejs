<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>Pending EHIC Requests
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info mb-3">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Institution:</strong> <%= institution.name %> (<%= institution.institutionId %>)
                </div>

                <% if (requests.length === 0) { %>
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>No pending EHIC requests at this time.</strong><br>
                        <small>Citizens registered with <%= institution.name %> can request EHICs which will appear here for review.</small>
                    </div>
                <% } else { %>
                    <p class="text-muted mb-4">
                        Review and approve or reject EHIC (European Health Insurance Card) requests from citizens registered with <%= institution.name %>.
                    </p>

                    <div class="list-group">
                        <% requests.forEach(request => { %>
                            <div class="list-group-item">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h6 class="mb-2">
                                            <i class="bi bi-person-badge me-2"></i>
                                            <%= request.citizenId.firstName %> <%= request.citizenId.lastName %>
                                        </h6>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p class="mb-1 small">
                                                    <strong>Email:</strong> <%= request.citizenId.email %><br>
                                                    <strong>Username:</strong> <%= request.citizenId.username %><br>
                                                    <strong>Date of Birth:</strong> <%= request.dateOfBirth %><br>
                                                    <strong>Personal ID:</strong> <%= request.personalIdNumber %>
                                                </p>
                                            </div>
                                            <div class="col-md-6">
                                                <p class="mb-1 small">
                                                    <strong>Country:</strong> <span class="badge bg-primary"><%= request.cardIssuerCountry %></span><br>
                                                    <strong>Entitlement Period:</strong><br>
                                                    <%= new Date(request.entitlementStartDate).toLocaleDateString() %> - <%= new Date(request.entitlementEndDate).toLocaleDateString() %><br>
                                                    <strong>Card Expiry:</strong> <%= new Date(request.expiryDate).toLocaleDateString() %><br>
                                                    <strong>Requested:</strong> <%= new Date(request.createdAt).toLocaleDateString() %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <div class="d-flex flex-column gap-2">
                                            <button type="button" class="btn btn-sm btn-success"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#approveModal-<%= request._id %>">
                                                <i class="bi bi-check-circle me-1"></i>Approve
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#rejectModal-<%= request._id %>">
                                                <i class="bi bi-x-circle me-1"></i>Reject
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Approve Modal -->
                                <div class="modal fade" id="approveModal-<%= request._id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-success text-white">
                                                <h5 class="modal-title">Approve EHIC Request</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Approve EHIC request for <strong><%= request.citizenId.firstName %> <%= request.citizenId.lastName %></strong>?</p>
                                                <p class="text-muted small">
                                                    Once approved, the citizen will be able to use this EHIC to request Provisional Replacement Certificates (PRCs).
                                                </p>

                                                <div class="alert alert-info small">
                                                    <strong>EHIC Details:</strong><br>
                                                    Personal ID: <%= request.personalIdNumber %><br>
                                                    Valid: <%= new Date(request.entitlementStartDate).toLocaleDateString() %> - <%= new Date(request.expiryDate).toLocaleDateString() %>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="approveNotes-<%= request._id %>" class="form-label">Notes (Optional)</label>
                                                    <textarea class="form-control" id="approveNotes-<%= request._id %>"
                                                              rows="2" maxlength="500"
                                                              placeholder="Add any notes for the citizen..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-success" onclick="approveEHIC('<%= request._id %>')">
                                                    <i class="bi bi-check-circle me-1"></i>Approve EHIC
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectModal-<%= request._id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Reject EHIC Request</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Reject EHIC request for <strong><%= request.citizenId.firstName %> <%= request.citizenId.lastName %></strong>?</p>
                                                <div class="mb-3">
                                                    <label for="rejectNotes-<%= request._id %>" class="form-label">
                                                        Reason for Rejection <span class="text-danger">*</span>
                                                    </label>
                                                    <textarea class="form-control" id="rejectNotes-<%= request._id %>"
                                                              rows="3" required minlength="10" maxlength="500"
                                                              placeholder="Please provide a clear reason for rejection..."></textarea>
                                                    <small class="form-text text-muted">
                                                        Between 10 and 500 characters. The citizen will see this reason.
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="button" class="btn btn-danger" onclick="rejectEHIC('<%= request._id %>')">
                                                    <i class="bi bi-x-circle me-1"></i>Reject
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>

                <div class="mt-4">
                    <a href="/prc/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function approveEHIC(ehicId) {
    const notes = document.getElementById(`approveNotes-${ehicId}`).value;
    const modal = bootstrap.Modal.getInstance(document.getElementById(`approveModal-${ehicId}`));

    fetch(`/ehic/approve/${ehicId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ notes })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            modal.hide();
            showAlert('success', `EHIC request for ${data.citizenName} has been approved.`);
            setTimeout(() => location.reload(), 1500);
        } else {
            showAlert('danger', data.error || 'Failed to approve EHIC request');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showAlert('danger', 'An error occurred while approving the EHIC request');
    });
}

function rejectEHIC(ehicId) {
    const notes = document.getElementById(`rejectNotes-${ehicId}`).value;

    if (!notes || notes.length < 10) {
        showAlert('warning', 'Please provide a rejection reason (minimum 10 characters)');
        return;
    }

    const modal = bootstrap.Modal.getInstance(document.getElementById(`rejectModal-${ehicId}`));

    fetch(`/ehic/reject/${ehicId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ notes })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            modal.hide();
            showAlert('info', `EHIC request for ${data.citizenName} has been rejected.`);
            setTimeout(() => location.reload(), 1500);
        } else {
            showAlert('danger', data.error || 'Failed to reject EHIC request');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showAlert('danger', 'An error occurred while rejecting the EHIC request');
    });
}

function showAlert(type, message) {
    const alertHtml = `
        <div class="alert alert-${type} alert-dismissible fade show" role="alert">
            <i class="bi bi-${type === 'success' ? 'check-circle' : type === 'danger' ? 'x-circle' : 'info-circle'} me-2"></i>
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    `;

    const container = document.querySelector('.card-body');
    container.insertAdjacentHTML('afterbegin', alertHtml);
}
</script>
